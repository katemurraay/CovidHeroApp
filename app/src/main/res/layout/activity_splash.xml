<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout
        android:id="@+id/rlSplash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_splash"
        tools:ignore="UselessParent">

        <!-- Third Party Animation used: Lottie Animation File - "Nurse",
        Bojan Mltevski,
       https://lottiefiles.com/23562-nurse -->
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:lottie_rawRes="@raw/nurse"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
       />
        <!--END-->
    </RelativeLayout>

    <LinearLayout
    android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="6sp"
        android:orientation="horizontal"
        android:id="@+id/layout_menu">
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Image icon is made by Freepik from www.flaticon.com-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shield"
                android:id="@+id/ivShield"
                android:padding="20sp"/>
            <!--END-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/img_hero"
                android:textColor="@color/fab_hero"
                android:textStyle="bold"
                android:padding="20sp"
                android:textSize="16sp"/>
                        </LinearLayout>
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Image icon is made by Freepik from www.flaticon.com-->
        <ImageView
            android:id="@+id/ivCovid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/covid"
            android:padding="20sp"/>
        <!--END-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/img_covid"
            android:textStyle="bold"
            android:textColor="@color/fab_line_chart"
            android:padding="20sp"
            android:textSize="16sp"/>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>